{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd dohhh && yarn install && NODE_ENV=production node run-migrations.js"
  },
  "deploy": {
    "startCommand": "cd dohhh && NODE_ENV=production node railway-startup.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}